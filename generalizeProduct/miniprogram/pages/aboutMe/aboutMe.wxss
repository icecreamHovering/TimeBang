/* miniprogram/pages/aboutMe/aboutMe.wxss */

.header {
  display: flex;
  height: 300rpx;
  color: #ffff;
  font-size: 36rpx;
  background: #d25f3b;
}

.header image {
  width: 100rpx;
}

.header .name {
  width: 750rpx;
  text-align: center;
  position: relative;
  letter-spacing: 10rpx;
  font-size: 50rpx;
  text-shadow: 1px 3px 3px #f1f1f1;
  margin: auto 0;
}

.header .name .subname {
  width: 100%;
  position: absolute;
  bottom: -50rpx;
  text-align: center;
  letter-spacing: 0;
  font-size: 20rpx;
  font-family: Fira Code, Arial, sans-serif;
  text-shadow: none;
}

.list {
    position: relative;
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 20rpx;
  border-bottom: 1px solid #f1f1f1;
}

.list image {
  margin: auto 40rpx auto 0;
  width: 40rpx;
}
.list button {
    position: absolute;
    top: 0;
    right: 10rpx;
    bottom: 0;
    margin: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50rpx;
    min-width: 120rpx;
    font-size: 24rpx;
    color: #fff;
    background: #d25f3b;
}
.content {
  padding: 20rpx;
}
.content image {
  margin: 20rpx 0;
  width: 710rpx;
}
.content .main-text {
  padding: 10rpx 0;
  text-indent: 20rpx;
  letter-spacing: 2rpx;
}
.content .title {
  margin: 10rpx 0;
  font-size: 32rpx;
  font-weight: bold;
}